<% layout('/layout/boilerplate') -%>
<div>
    <h3 class="f-h"> Enter new Details</h3>
    <div class="row">
        <div class="col-8 offset-2">
    <form action="/listing" method="post" class="newform">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input type="text" placeholder="title" name="listing[title]" class="form-control" required>

        </div>
        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
<textarea type="text" placeholder="description" name="listing[description]" required  class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label for="Image" class="form-lable">Image</label>
            <input type="text" placeholder="image link/url" class="form-control name="listing[image]">

        </div>
        <div class="mb-3">
            <label for="price" class="form-lable">price</label>
            <input type="number" placeholder="price" name="listing[price]" class="form-control" required>

            
        </div>
        <div class="row">
            <div class="mb-3 col-md-4 ">
                <label for="location" class="form-lable"> Location</label>
                <input type="text" placeholder="location" name="listing[location]" class="form-control">
        
               </div>
               <div class="mb-3 col-md-8 ">
                <label for="country" class="form-lable">country</label>
                <input type="text" placeholder="country" name="listing[country]" class="form-control" required>
        
               </div>
        
        </div>
          <button class=" btn btn-dark add-btn"> Submit </button>
    </form>
</div>
</div>
</div>
